<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.saad.toptaseapplication.Table_Booking">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:tint="#60000000"
        app:srcCompat="@drawable/bg_book_table" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/alpha_boundary"
        android:padding="20dp"
        tools:context="com.example.saad.toptastecreditapp.Login">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioGroup"
            android:layout_alignParentStart="true"
            android:paddingBottom="5dp"
            android:text="Family:"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/textView"
            android:orientation="horizontal"
            android:padding="0dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/radioGroup"
                android:buttonTint="@color/white"
                android:checked="true"
                android:text="Yes"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:buttonTint="@color/white"
                android:text="No"
                android:textColor="@color/white"
                android:textColorLink="@color/white" />
        </RadioGroup>

        <EditText
            android:id="@+id/txt_numberOfPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:background="#30ffffff"
            android:hint="Number of People"
            android:inputType="textVisiblePassword|number"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txt_estimatedArrivalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_numberOfPeople"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_numberOfPeople"
            android:layout_marginTop="10dp"
            android:background="#30ffffff"
            android:hint="Estimated Arrival Time (minutes)"
            android:inputType="textVisiblePassword|number"
            android:padding="10dp"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_Book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_estimatedArrivalTime"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_estimatedArrivalTime"
            android:layout_marginTop="10dp"
            android:background="@drawable/oval_boundary"
            android:text="Book"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>
